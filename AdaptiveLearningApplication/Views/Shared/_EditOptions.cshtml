@model AdaptiveLearningApplication.Models.QuestionOption

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>QuestionOption</legend>

        @Html.HiddenFor(model => model.QuestionOptionID)

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionOptionStatement,new { @class = "control-label" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionOptionStatement)
            @Html.ValidationMessageFor(model => model.QuestionOptionStatement,"",new { @class = "alert-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionID,new { @class = "control-label" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionID)
            @Html.ValidationMessageFor(model => model.QuestionID,"",new { @class = "alert-danger" })
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
