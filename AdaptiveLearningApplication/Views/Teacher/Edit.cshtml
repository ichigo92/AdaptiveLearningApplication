@model AdaptiveLearningApplication.ViewModel.CourseTeachersViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Teacher</legend>

        @Html.HiddenFor(model => model.Teacher.TeacherID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.TeacherFirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Teacher.TeacherFirstName)
            @Html.ValidationMessageFor(model => model.Teacher.TeacherFirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.TeacherLastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Teacher.TeacherLastName)
            @Html.ValidationMessageFor(model => model.Teacher.TeacherLastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.TeacherAge)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Teacher.TeacherAge)
            @Html.ValidationMessageFor(model => model.Teacher.TeacherAge)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher.TeacherGender)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Teacher.TeacherGender)
            @Html.ValidationMessageFor(model => model.Teacher.TeacherGender)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AllCourses,"Course")
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.SelectedCourses, Model.AllCourses)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
