@model AdaptiveLearningApplication.Models.Result

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Result</legend>

        @Html.HiddenFor(model => model.ResultID)

        <div class="editor-label">
            @Html.LabelFor(model => model.MarksObtained)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MarksObtained)
            @Html.ValidationMessageFor(model => model.MarksObtained)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PercentageObtained)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentageObtained)
            @Html.ValidationMessageFor(model => model.PercentageObtained)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentID, "Student")
        </div>
        <div class="editor-field">
            @Html.DropDownList("StudentID", String.Empty)
            @Html.ValidationMessageFor(model => model.StudentID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
