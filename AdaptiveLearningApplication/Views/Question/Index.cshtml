@model IEnumerable<AdaptiveLearningApplication.Models.QuestionPoolModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div style="margin-top: 25px;" class="col col-md-6">
    <div class="col col-md-3  panel panel-success">
        <div class="panel-body" style="margin-left: 36px; cursor: pointer">
            <div class="row">
                <div class="col">
                    <i class="fa fa-plus fa-5x" aria-hidden="true"></i>
                </div>
            </div>
            <div class="row">
                @Html.ActionLink("Create New", "Create")
            </div>
        </div>
    </div>
</div>

<table style="margin-bottom: 322px;" class="table table-striped table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOptionOne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOptionTwo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOptionThree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOptionFour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DifficultyLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quiz.QuizName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOptionOne)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOptionTwo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOptionThree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOptionFour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DifficultyLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quiz.QuizName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuestionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuestionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuestionID })
        </td>
    </tr>
}

</table>
